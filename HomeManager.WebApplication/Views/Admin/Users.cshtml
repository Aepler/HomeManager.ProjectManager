@model HomeManager.WebApplication.ViewModels.Admin.UserModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Users";
    ViewData["ActivePage"] = ManageNavPages.Users;
}

<h4>@ViewData["Title"]</h4>

<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalCreateUserAdmin">New User</button>

<form id="formCreateUserAdmin" asp-action="CreateUser">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal fade" id="modalCreateUserAdmin" role="dialog" aria-labelledby="modalLabelCreateUserAdmin" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabelCreateUserAdmin">New User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modalBodyCreateUserAdmin">
                    <div class="form-group form-floating">
                        <input asp-for="UserName" placeholder="UserName" id="inputUserNameCreateUserAdmin" class="form-control" />
                        <label asp-for="UserName" class="control-label"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="Email" placeholder="Email" id="inputEmailCreateUserAdmin" class="form-control" />
                        <label asp-for="Email" class="control-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="Name" placeholder="Name" id="inputNameCreateUserAdmin" class="form-control" />
                        <label asp-for="Name" class="control-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="Lastname" placeholder="Lastname" id="inputLastnameCreateUserAdmin" class="form-control" />
                        <label asp-for="Lastname" class="control-label"></label>
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="PhoneNumber" placeholder="PhoneNumber" id="inputPhoneNumberCreateUserAdmin" class="form-control" />
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="Password" placeholder="Password" id="inputPasswordCreateUserAdmin" class="form-control" />
                        <label asp-for="Password" class="control-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" id="inputConfirmPasswordCreateUserAdmin" class="form-control" />
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer" id="modalFooterCreateUserAdmin">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" value="Create" class="btn btn-primary" id="buttonModalCreateUserAdmin" data-bs-dismiss="modal">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form id="formEditUserAdmin" asp-action="EditUser">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal fade" id="modalEditUserAdmin" role="dialog" aria-labelledby="modalLabelEditUserAdmin" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabelEditUserAdmin">Edit User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modalBodyEditUserAdmin">
                    <div class="form-group form-floating">
                        <input asp-for="UserName" placeholder="UserName" id="inputUserNameEditUserAdmin" class="form-control" />
                        <label asp-for="UserName" class="control-label"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="Email" placeholder="Email" id="inputEmailEditUserAdmin" class="form-control" />
                        <label asp-for="Email" class="control-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="Name" placeholder="Name" id="inputNameEditUserAdmin" class="form-control" />
                        <label asp-for="Name" class="control-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="Lastname" placeholder="Lastname" id="inputLastnameEditUserAdmin" class="form-control" />
                        <label asp-for="Lastname" class="control-label"></label>
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="PhoneNumber" placeholder="PhoneNumber" id="inputPhoneNumberEditUserAdmin" class="form-control" />
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer" id="modalFooterEditUserAdmin">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" value="Create" class="btn btn-primary" id="buttonModalEditUserAdmin" data-bs-dismiss="modal">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form id="formDeleteUserAdmin" asp-action="DeleteUser">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal fade" id="modalDeleteUserAdmin" role="dialog" aria-labelledby="modalLabelDeleteUserAdmin" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabelDeleteUserAdmin">Delete User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modalBodyDeleteUserAdmin">
                    <p>Are you sure you want to Delete this UserAdmin?</p>
                </div>
                <div class="modal-footer" id="modalFooterDeleteUserAdmin">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" value="Create" class="btn btn-danger" id="buttonModalDeleteUserAdmin" data-bs-dismiss="modal">Delete User</button>
                </div>
            </div>
        </div>
    </div>
</form>

<br />

<table id="tblUserAdmin" class="table table-hover">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Email
            </th>
            <th>
                Name
            </th>
            <th>
                Lastname
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                TwoFactor Enabled
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/admin/user.js"></script>
    <script src="~/lib/datatables/datatables.min.js"></script>
    <link rel="stylesheet" href="~/lib/datatables/datatables.min.css">
    <partial name="_ValidationScriptsPartial" />
}
