@model HomeManager.Models.ViewModels.Admin.UserRolesModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "User Roles";
    ViewData["ActivePage"] = ManageNavPages.UserRoles;
}

<h4>@ViewData["Title"]</h4>

<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalCreateUserRole">New User Role</button>

<form asp-action="CreateRole">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal fade" id="modalCreateUserRole" role="dialog" aria-labelledby="modalLabelCreateUserRole" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabelCreateUserRole">New User Role</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group form-floating">
                        <select asp-for="UserId" placeholder="UserId" class="form-control" asp-items="ViewBag.UserId">
                            <option value="-1" disabled selected>Select a User</option>
                        </select>
                        <label asp-for="UserId" class="control-label">User</label>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <select asp-for="RoleId" placeholder="RoleId" class="form-control" asp-items="ViewBag.RoleId">
                            <option value="-1" disabled selected>Select a Role</option>
                        </select>
                        <label asp-for="RoleId" class="control-label">Role</label>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" value="Create" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                User
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.UserRoles)
        {
            <tr>
                <td>
                    @item.User
                </td>
                <td>
                    @item.Role
                </td>
                <td>
                    <a asp-action="EditUserRole">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
