@model HomeManager.Models.Type
@{
    Layout = "_Layout";
    ViewData["Title"] = "Types";
    ViewData["ActivePage"] = ManageNavPages.Types;
}

<h4>@ViewData["Title"]</h4>

<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalCreateType">New Type</button>

<form asp-action="CreateType">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal fade" id="modalCreateType" role="dialog" aria-labelledby="modalLabelCreateType" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabelCreateType">New Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group form-floating">
                        <input asp-for="Name" placeholder="Name" class="form-control" />
                        <label asp-for="Name" class="control-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="EndTaxType" placeholder="EndTaxType" class="form-control" />
                        <label asp-for="EndTaxType" class="control-label"></label>
                        <span asp-validation-for="EndTaxType" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Debit" /> @Html.DisplayNameFor(model => model.Debit)
                        </label>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input asp-for="ExtraInput" placeholder="ExtraInput" class="form-control" />
                        <label asp-for="ExtraInput" class="control-label"></label>
                        <span asp-validation-for="ExtraInput" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <select asp-for="fk_StatusId" class="form-control" asp-items="ViewBag.Status">
                            <option value="-1" disabled selected>Select a end Status</option>
                        </select>
                        <label asp-for="fk_StatusId" class="control-label">End Status</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" value="Create" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                EndTaxType
            </th>
            <th>
                Debit
            </th>
            <th>
                ExtraInput
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Types)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.EndTaxType
            </td>
            <td>
                @item.Debit
            </td>
            <td>
                @item.ExtraInput
            </td>
            <td>
                @item.Status.Name
            </td>

        </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
