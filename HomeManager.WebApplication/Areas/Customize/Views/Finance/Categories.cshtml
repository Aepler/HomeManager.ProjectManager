@model HomeManager.Models.Entities.Finance.Category

@{
    ViewData["Title"] = "Categories";
    ViewData["ActivePage"] = CustomizeNavViews.Categories;
}

<h4>@ViewData["Title"]</h4>

@if (ViewBag.CategoryCount == 0)
{
<h4>Create Category</h4>
    <br />
    <form asp-action="CreateCategory">
        <div class="form-group form-floating">
            <input asp-for="Name" placeholder="Name" class="form-control" />
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}
else
{
    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalCreateCategoryCustomize">New Category</button>

    <form id="formCreateCategoryCustomize" asp-action="CreateCategory">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="modal fade" id="modalCreateCategoryCustomize" role="dialog" aria-labelledby="modalLabelCreateCategoryCustomize" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabelCreateCategoryCustomize">New Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="modalBodyCreateCategoryCustomize">
                        <div class="form-group form-floating">
                            <input asp-for="Name" placeholder="Name" id="inputNameCreateCategoryCustomize" class="form-control" />
                            <label asp-for="Name" class="control-label"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer" id="modalFooterCreateCategoryCustomize">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" value="Create" class="btn btn-primary" id="buttonModalCreateCategoryCustomize" data-bs-dismiss="modal">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <form id="formEditCategoryCustomize" asp-action="EditCategory">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="modal fade" id="modalEditCategoryCustomize" role="dialog" aria-labelledby="modalLabelEditCategoryCustomize" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabelEditCategoryCustomize">Edit Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="modalBodyEditCategoryCustomize">
                        <div class="form-group form-floating">
                            <input asp-for="Name" placeholder="Name" id="inputNameEditCategoryCustomize" class="form-control" />
                            <label asp-for="Name" class="control-label"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer" id="modalFooterEditCategoryCustomize">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" value="Create" class="btn btn-primary" id="buttonModalEditCategoryCustomize" data-bs-dismiss="modal">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <form id="formDeleteCategoryCustomize" asp-action="DeleteCategory">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="modal fade" id="modalDeleteCategoryCustomize" role="dialog" aria-labelledby="modalLabelDeleteCategoryCustomize" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabelDeleteCategoryCustomize">Delete Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="modalBodyDeleteCategoryCustomize">
                        <p>Are you sure you want to Delete this CategoryCustomize?</p>
                    </div>
                    <div class="modal-footer" id="modalFooterDeleteCategoryCustomize">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" value="Create" class="btn btn-danger" id="buttonModalDeleteCategoryCustomize" data-bs-dismiss="modal">Delete Category</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <br />

    <table id="tblCategoryCustomize" class="table table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
}

@section Scripts {
    <script src="~/js/customize/finance/category.js"></script>
    <script src="~/lib/datatables/datatables.min.js"></script>
    <link rel="stylesheet" href="~/lib/datatables/datatables.min.css">
    <partial name="_ValidationScriptsPartial" />
}
