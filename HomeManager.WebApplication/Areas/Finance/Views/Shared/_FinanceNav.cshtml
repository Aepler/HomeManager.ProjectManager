@using Microsoft.AspNetCore.Identity
@using HomeManager.Models.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var user = UserManager.GetUserAsync(User).Result;
}

<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class="nav-link @FinanceNavViews.IndexNavClass(ViewContext)" id="index" asp-area="Finance" asp-controller="Home" asp-action="Index">Finance</a></li>
    @if (user.CurrentWallet != null)
    {
        <hr />
        <li class="nav-item"><a class="nav-link @FinanceNavViews.PaymentsNavClass(ViewContext)" id="payments" asp-area="Finance" asp-controller="Payments" asp-action="Index">Payments</a></li>
        <li class="nav-item"><a class="nav-link @FinanceNavViews.RepeatingNavClass(ViewContext)" id="repeating" asp-area="Finance" asp-controller="Payments" asp-action="Repeating">Repeating Payments</a></li>
    }
</ul>
