@model HomeManager.WebApplication.Areas.Settings.ViewModels.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = SettingsNavViews.ChangePassword;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group form-floating">
                <input asp-for="Input.OldPassword" placeholder="OldPassword" class="form-control" />
                <label asp-for="Input.OldPassword"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-floating">
                <input asp-for="Input.NewPassword" placeholder="NewPassword" class="form-control" />
                <label asp-for="Input.NewPassword"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-floating">
                <input asp-for="Input.ConfirmPassword" placeholder="ConfirmPassword" class="form-control" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}