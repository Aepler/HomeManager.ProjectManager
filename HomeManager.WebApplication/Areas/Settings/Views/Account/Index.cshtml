@model HomeManager.WebApplication.Areas.Settings.ViewModels.Account.IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = SettingsNavViews.IndexAccount;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-floating">
                <input asp-for="Username" placeholder="Username" class="form-control" disabled />
                <label asp-for="Username"></label>
            </div>
            <br />
            <div class="form-group form-floating">
                <input asp-for="Input.Name" placeholder="Name" class="form-control" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-floating">
                <input asp-for="Input.Lastname" placeholder="Lastname" class="form-control" />
                <label asp-for="Input.Lastname"></label>
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-floating">
                <input asp-for="Input.PhoneNumber" placeholder="PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <br />
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}